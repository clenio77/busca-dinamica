{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "api/cron/update-ceps.js": {
      "maxDuration": 300
    },
    "api/cron/collect-ceps.js": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron/update-ceps",
      "schedule": "0 2 * * 1"
    },
    {
      "path": "/api/cron/collect-ceps",
      "schedule": "0 6 * * *"
    }
  ]
}
