# Configurações para Render
NODE_ENV=production
PORT=3000

# PostgreSQL (será fornecido automaticamente pelo Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Configurações dos agentes (mais conservadoras para Render)
SCRAPER_DELAY_MS=2000
MAX_REQUESTS_PER_MINUTE=30

# Desabilitar funcionalidades que não funcionam no Render
DISABLE_CRON=true
DISABLE_BACKUP=true
DISABLE_FILE_LOGS=true

# Admin (opcional - para demo)
ADMIN_TOKEN=render_demo_token
